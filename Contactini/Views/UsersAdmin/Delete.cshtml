@model IdentitySample.Models.ApplicationUser

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h2 class="well text-center">Supprimer cet utilisateur.</h2>

<h3>Etes vous sure de supprimer cet utilisateur?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nom d'utilisateur")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            @Html.DisplayName("Nom et prénom")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt>
            @Html.DisplayName("Addresse")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DisplayAddress)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-trash"></span>Supprimer </button> |
        <a class="btn btn-primary" href="@Url.Action("Index","UsersAdmin")"><span class="glyphicon glyphicon-backward"></span> Retour</a>
    </div>
    }
</div>
