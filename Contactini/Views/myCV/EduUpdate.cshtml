@model Contactini.Models.Entities.Education

@{
    ViewBag.Title = "EduUpdate";
    Layout = "~/Views/Shared/BusinessLayout.cshtml";
}

<h2 class="well text-center">Mise à jour Education</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    <div class="row" align="center">
        <div class="form-group col-md-6">
            @Html.Label("Université", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.InstituteUniversity, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.InstituteUniversity, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            @Html.Label("Diplome", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.TitleOfDiploma, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TitleOfDiploma, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row" align="center">
        <div class="form-group col-md-6">
            @Html.Label("de l'année", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.FromYear, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FromYear, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            @Html.Label("a l'année", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.ToYear, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ToYear, "", new { @class = "text-danger" })
        </div>
        
    </div>
    <div class="row" align="center">
      
        <div class="form-group col-md-6">
            @Html.Label("Pays", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.Label("Governorat", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row" align="center">
        <div class="col-md-12">
            @Html.Label("Niveau", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Degree, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Degree, "", new { @class = "text-danger" })
        </div>
    </div>   
    <div class="row" style="margin-top:15px;" >
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary  pull-right"><span class="glyphicon glyphicon-edit"></span>Enregistrer</button>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("Index","myCV")" class="btn btn-primary pull-left"><span class="glyphicon glyphicon-backward"></span>Retour</a>
        </div>
    </div>
</div>
    }

    @*<div>
        @Html.ActionLink("Back to List", "Index")
    </div>*@

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
