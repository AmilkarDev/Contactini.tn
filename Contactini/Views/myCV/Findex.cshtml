@model Contactini.Models.Entities.ServiceProvider
@using Contactini.Models
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@{
    ViewBag.Title = "Index";
    Layout = "";
    string srcp = @ViewBag.photoLinkp;
    if (srcp == null) srcp = "~/Content/Images/Unknown.png";
    string str1 = "aucune domaine"; string str2 = "aucun secteur";
    if (Model.Domain != null)
        str1 = Model.Domain.Name;
    if (Model.sector != null)
        str2 = Model.sector.Name;
}
<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css" integrity="sha384-y3tfxAZXuh4HwSYylfB+J125MxIs6mR5FOHamPBG064zB+AFeWH94NdvaCBm8qnd" crossorigin="anonymous">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <style type="text/css">

        .socialMedia {
            padding-left: 16%;
        }

        .panel-default {
            width: 65%;
            margin-left: 18%;
            margin-top: 3%;
        }

        .IconTitle {
            border: 3px solid #e0e0e0;
            display: inline-block;
            width: 70px;
            height: 70px;
            border-radius: 100%;
        }

        .yearStyle {
            font-size: 13px;
            color: #FFF;
            padding: 5px;
            border-radius: 4px;
            font-weight: bold;
        }

        .box {
            border: 1px solid #d0cfcf;
            padding: 16px 0px;
            border-radius: 11px;
            margin-top: 15px;
        }

        .description {
            padding: 9px 48px;
            font-size: 13px;
            color: #797575;
            font-style: italic;
        }
    </style>

</head>
<body>
    <!-- Latest compiled and minified CSS -->
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <div id="Profil">
                    <img src=@Url.Content(srcp) alt="" class="img-circle" style="width: 125px; height: 142px; border: 3px solid #c1c1c1;" />
                    <h4 style="display: inline-block; margin-left: 20px;">@string.Format("{0}", Model.FullName)</h4>


                    <a href="@Url.Action("PrintCV","myCV")" class="btn btn-primary pull-right" style="margin-right:3px;">
                        <span class="glyphicon glyphicon-print"></span>Imprimer
                    </a>
                </div>
                <div id="container">
                    <div class="row" style="margin-top: 22px;">
                        <div class="col-xs-6">
                            <p>
                                <b> Date de naissance : </b> <span>@string.Format("{0: dd/MM/yyyy}", @Model.DateOfBirth)</span>
                            </p>
                        </div>
                        <div class="col-xs-6">
                            <p>
                                <b>Téléphone :</b> <span>@Model.PhoneNum</span>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <p>
                                <b>Nationalité :</b> <span>@Model.Address.Country</span>
                            </p>
                        </div>
                        <div class="col-xs-6">
                            <p>
                                <b>Email :</b> <span>@Model.Email</span>
                            </p>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-xs-6">
                            <p>
                                <b>Niveau educationnel :</b> <span>@Model.EducationalLevel</span>
                            </p>
                        </div>
                        <div class="col-xs-6">
                            <p>
                                <b>Addresse : </b> <span>@Model.Address.DisplayAddress</span>
                            </p>
                        </div>
                    </div>
                    <div class="row">



                    </div>
                </div>

            </div>
        </div>

        <div class="panel panel-default">
            <div style="margin-left:3%; margin-top: 2%;">
                <span class="IconTitle" style="background-color:#a9a9a9">
                    <span class="glyphicon glyphicon-user" aria-hidden="true" style="margin-left:26px; margin-top: 23px; color:#FFF;"></span>

                </span>

                <h4 style="margin-left: 12%; margin-top: -6%;">@Model.Titre</h4>

            </div>
            <div class="panel-body">

                <p class="description">
                    @Model.Description
                </p>
                <div class="row">
                    <div class="col-md-6" align="center">
                        <span class="badge badge-danger">Secteur : </span>
                        <span class="yearStyle" style="margin-bottom:2px; background-color: #5cb85c;"> <i class="fa fa-bookmark-o"></i> @str2 </span>
                    </div>
                    <div class="col-md-6" align="center">
                        <span class="badge badge-danger">Domaine : </span>
                        <span class="yearStyle" style=" background-color: #5cb85c;">  <i class="fa fa-bookmark-o"></i> @str1 </span>
                    </div>
                </div>

            </div> <!-- END PANEL BODY -->
        </div>

        @{ Html.RenderAction("EduCV", "myCV");}

        @{ Html.RenderAction("ExpCV", "myCV");}

        @{ Html.RenderAction("SkiCV", "myCV");}
        @{ Html.RenderAction("CertCV", "myCV");}
        @{ Html.RenderAction("LangCV", "myCV");}
    </div>
</body>
</html>
