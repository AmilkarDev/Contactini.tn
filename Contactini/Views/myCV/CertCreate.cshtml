@model Contactini.Models.Entities.Certification

@{
    ViewBag.Title = "CertCreate";
    Layout = "~/Views/Shared/BusinessLayout.cshtml";
}
<style type="text/css">

    .row {
        margin-bottom: 25px;
    }

    .IconTitle {
        border: 3px solid #e0e0e0;
        display: inline-block;
        width: 70px;
        height: 70px;
        border-radius: 100%;
        background-color: #e066ff;
    }
</style>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="Certification FirstLevel" style="margin: 2% auto;">
        <div style="margin-left:18%;">
            <span class="IconTitle" style="background-color:#f0ad4e;">
                <span class="glyphicon glyphicon-file" aria-hidden="true" style="margin-left:26px; margin-top: 23px; color:#FFF;"></span>
            </span>
            <h4 style="margin-left: 8%; margin-top: -4%;">Certifications</h4>
        </div>

        <div class="panel panel-default" style="width: 65%; margin-left: 18%; margin-top: 3%;">
            <div class="panel-heading">
                <h3 class="panel-title">Certifications</h3>
            </div> <!-- END PANEL HEADING -->
            <form>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-6">
                            @Html.EditorFor(model => model.CertificationName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nom du certificate" } })
                            @Html.ValidationMessageFor(model => model.CertificationName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-xs-6">
                            @Html.EditorFor(model => model.CertificationAuthority, new { htmlAttributes = new { @class = "form-control", @placeholder = "Authorité de sertification" } })
                            @Html.ValidationMessageFor(model => model.CertificationAuthority, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            @Html.EnumDropDownListFor(model => model.Level, htmlAttributes: new { @class = "form-control", @placeholder = "Niveau" })
                            @Html.ValidationMessageFor(model => model.Level, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <div class="input-group">
                                    @Html.EditorFor(model => model.FromYear, new { htmlAttributes = new { @class = "form-control", @placeholder = "à l'année" } })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.FromYear, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                            <div class="form-group col-md-6">
                                <a href="@Url.Action("Index","myCV")" class="btn btn-primary pull-right">
                                    <span class="glyphicon glyphicon-backward"></span>Retour
                                </a>

                            </div>
                            <div class="form-group col-md-6">
                                <button type="submit" class="btn btn-primary">
                                    <span class="glyphicon glyphicon-floppy-disk"></span>Enregistrer
                                </button>
                            </div>                      
                    </div>
                    </div> 
            </form>
        </div>
    </div>
    
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
