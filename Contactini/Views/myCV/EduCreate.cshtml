@model Contactini.Models.Entities.Education
@{
    ViewBag.Title = "Nouveau";
    Layout = "~/Views/Shared/BusinessLayout.cshtml";
}

<style type="text/css">

    .row {
        margin-bottom: 25px;
    }

    .IconTitle {
        border: 3px solid #e0e0e0;
        display: inline-block;
        width: 70px;
        height: 70px;
        border-radius: 100%;
        background-color: #5cb85c;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="Education FirstLevel" style="margin: 2% auto;">
            <div style="margin-left:18%;">
                <span class="IconTitle">
                    <span class="glyphicon glyphicon-education" aria-hidden="true" style="margin-left:26px; margin-top: 23px; color:#FFF;"></span>
                </span>
                <h4 style="margin-left: 8%; margin-top: -4%;">Education</h4>
            </div>
            <div class="panel panel-default" style="width: 65%; margin-left: 18%; margin-top: 3%;">
                <div class="panel-heading">
                    <h3 class="panel-title">Education</h3>
                </div> <!-- END PANEL HEADING -->
                <form>
                    <div class="panel-body">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="form-group col-md-6">
                                @Html.EditorFor(model => model.InstituteUniversity, new { htmlAttributes = new { @class = "form-control", @placeholder = "Institution " } })
                                @Html.ValidationMessageFor(model => model.InstituteUniversity, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-6">
                                @Html.EditorFor(model => model.TitleOfDiploma, new { htmlAttributes = new { @class = "form-control", @placeholder = "Diplome" } })
                                @Html.ValidationMessageFor(model => model.TitleOfDiploma, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-10">
                                @Html.EditorFor(model => model.Degree, new { htmlAttributes = new { @class = "form-control ", @placeholder = "Niveau" } })
                                @Html.ValidationMessageFor(model => model.Degree, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                @Html.EditorFor(model => model.FromYear, new { htmlAttributes = new { @class = "form-control", @placeholder = "de l'année  " } })
                                @Html.ValidationMessageFor(model => model.FromYear, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.EditorFor(model => model.ToYear, new { htmlAttributes = new { @class = "form-control", @placeholder = "A l'année  " } })
                                @Html.ValidationMessageFor(model => model.ToYear, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", @placeholder = "City" } })
                                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control", @placeholder = "Pays" } })
                                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <button type="submit" class="btn btn-primary pull-right"> <span class="glyphicon glyphicon-plus"></span>Ajouter</button>
                            </div>
                            <div class="form-group col-md-6">
                                <a href="@Url.Action("Index","myCV")" class="btn btn-primary pull-left"><span class="glyphicon glyphicon-backward"></span>Retour</a>
                            </div>
                        </div>
                        </div>
                      
                </form>
            </div>

        </div>
    </div>


}

